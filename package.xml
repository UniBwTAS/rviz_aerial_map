<?xml version="1.0"?>
<package format="2">
    <name>rviz_aerial_map</name>
    <version>0.1.0</version>
    <description>Display satellite map tiles in RViz</description>
    <author>Andreas Reich</author>
    <maintainer email="andreas.reich@unibw.de">anre</maintainer>
    <license>BSD</license>

    <buildtool_depend>catkin</buildtool_depend>

    <depend>roscpp</depend>
    <depend>rviz</depend>
    <depend>nav_msgs</depend>
    <depend>sensor_msgs</depend>
    <depend>geodesy</depend>
    <depend>geographic_msgs</depend>
    <depend>ogre_helpers</depend>
    <depend>ogre_primitives</depend>
    <depend>tas_proj</depend>
    <depend>map_helpers</depend>

    <export>
        <rviz plugin="${prefix}/plugin_description.xml"/>
    </export>
</package>
